<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Username"
            android:ems="10"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:layout_marginTop="93dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Email "
            android:ems="10"
            android:id="@+id/email"
            android:layout_marginTop="57dp"
            app:layout_constraintTop_toBottomOf="@+id/username" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/mobile" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Mobile "
            android:ems="10"
            android:id="@+id/mobile" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/password"/>
    <EditText
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/password" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginEnd="148dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            android:layout_marginTop="7dp" app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>